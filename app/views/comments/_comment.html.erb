<div class="well span8">
  <em>"<%= comment.body %>"</em><% if params[:tab] == "comments" %>
  on <%= link_to comment.post.title, post_path(comment.post) %><% end %>
  </br>
  <span class='quiet'>by</span> <%= link_to comment.creator.username, '' %>
  </small>at <%= comment.created_at %></small>
</div>
