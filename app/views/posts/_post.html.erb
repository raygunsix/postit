<div class='row'>
  <div class='span1 well text-center'>
    <%= link_to vote_post_path(post, type: true), method: :post do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    <br/>
    <%= post.total_votes %> votes
    <br/>
    <%= link_to vote_post_path(post, type: false), method: :post do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  </div>
  <div class='span8 well'>
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class='quiet'>posted by</span> <%= post.creator.username %>
      <small>at <%= display_datetime(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>
  </div>
</div>
