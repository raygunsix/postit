<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class='row'>
  <div class='span8 well'>
    <p><strong>Username:</strong> <%= @user.username %></p>
  </div>
</div>

<ul class='nav nav-tabs'>
  <li class='<%= 'active' if params[:tab].nil? %>'><%= link_to 'Posts', user_path(@user) %></li>
  <li class='<%= 'active' if params[:tab] == 'comments' %>'><%= link_to 'Comments', user_path(@user) %></li>
</ul>

<% if params[:tab].nil? || params[:tab] == 'posts' %>
  <% @user.posts.each do |post| %>
    <%= render 'posts/post', post: post %>
  <% end %>
<% else %>
  <% @user.comments.each do |comment| %>
    <%= render 'comments/comment', comment: comment %>
  <% end %>
<% end %>

